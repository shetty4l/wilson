---
interface Props {
  status: "green" | "yellow" | "red";
  size?: "sm" | "md" | "lg";
}

const { status, size = "md" } = Astro.props;

const sizeClasses = {
  sm: "w-2 h-2",
  md: "w-3 h-3",
  lg: "w-4 h-4",
};

const statusClasses = {
  green: "status-dot-green",
  yellow: "status-dot-yellow",
  red: "status-dot-red",
};
---

<div
  class:list={["status-dot", sizeClasses[size], statusClasses[status]]}
  data-status={status}
>
</div>
