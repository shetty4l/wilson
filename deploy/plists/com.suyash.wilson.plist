<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!--
  TEMPLATE: ${HOME} placeholders are expanded by scripts/install.sh via sed.
  Do not copy this file directly to ~/Library/LaunchAgents â€” launchd does not
  expand shell variables. Use the installer instead.
-->
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.suyash.wilson</string>

  <key>ProgramArguments</key>
  <array>
    <string>${HOME}/.bun/bin/bun</string>
    <string>run</string>
    <string>${HOME}/srv/wilson/latest/src/cli.ts</string>
    <string>serve</string>
  </array>

  <key>EnvironmentVariables</key>
  <dict>
    <key>PATH</key>
    <string>${HOME}/.local/bin:${HOME}/.bun/bin:/usr/local/bin:/opt/homebrew/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
  </dict>

  <key>KeepAlive</key>
  <true/>

  <!-- Allow child processes to survive if Wilson restarts.
       Without this, launchd sends SIGTERM to the entire process group. -->
  <key>AbandonProcessGroup</key>
  <true/>

  <key>StandardOutPath</key>
  <string>${HOME}/.config/wilson/wilson.log</string>
  <key>StandardErrorPath</key>
  <string>${HOME}/.config/wilson/wilson.log</string>
</dict>
</plist>
