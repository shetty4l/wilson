{
  "name": "wilson",
  "version": "0.1.0",
  "description": "Deployment orchestration for the Wilson system",
  "type": "module",
  "bin": {
    "wilson": "./src/cli.ts"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src/",
    "format": "biome check --write src/ test/",
    "format:check": "biome check src/ test/",
    "test": "bun test",
    "validate": "bun run typecheck && bun run lint && bun run format:check && bun run test",
    "version:bump": "bun run scripts/version-bump.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/bun": "latest",
    "husky": "^9.0.0",
    "oxlint": "^0.12.0",
    "typescript": "^5.0.0"
  }
}
