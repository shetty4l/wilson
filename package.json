{
  "name": "wilson",
  "version": "0.2.0",
  "description": "Deployment orchestration for the Wilson system",
  "type": "module",
  "bin": {
    "wilson": "./src/cli.ts",
    "wilson-ctl": "./src/ctl-cli.ts"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src/",
    "format": "biome check --write src/ test/",
    "format:check": "biome check src/ test/",
    "test": "bun test",
    "build:dashboard": "cd dashboard && bun run build",
    "validate": "bun run typecheck && bun run lint && bun run format:check && bun run test && bun run build:dashboard",
    "version:bump": "bunx version-bump",
    "prepare": "husky"
  },
  "dependencies": {
    "@shetty4l/core": "^0.1.30"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "oxlint": "^1.48.0",
    "typescript": "^5.9.3"
  }
}
